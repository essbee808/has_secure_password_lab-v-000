<h1>Sign Up</h1>
<p>Find me in app/views/users/new.html.erb</p>
  <%= form_for(@user) do |f| %>
    <%= f.label "Name" %>
    <%= f.text_field :name %>

    <%= f.label "Password" %>
    <%= f.password_field :password %>
    <%= f.label "Password Confirmation" %>
    <%= f.password_field :password_confirmation %>
    <%= f.submit "Sign Up" %>

<% end %>
